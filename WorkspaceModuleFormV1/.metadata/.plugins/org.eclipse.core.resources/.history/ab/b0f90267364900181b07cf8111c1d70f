package application;

import javafx.scene.Group;
import javafx.scene.Parent;
import javafx.scene.control.Label;
import javafx.scene.control.PasswordField;
import javafx.scene.control.TextField;


public class ConnexionStyle extends Parent{
	private final Group form;
	/**
	 * @description : Cet objet est un formulaire de connexion !
	 */
	public ConnexionStyle(){
	/*generation de notre formulaire*/
	this.form = new Group();
	Label l_id = new Label("id");
	TextField id = new TextField();
	Label l_mdp = new Label("mdp");
	PasswordField mdp = new PasswordField();
	
	/*petite mise en page de notre box*/
	//l_id
	l_id.setLayoutX(10);
	l_id.setLayoutY(5);
	//id
	id.setLayoutX(50);
	//l_mdp
	l_mdp.setLayoutX(10);
	l_mdp.setLayoutY(43);
	//mdp
	mdp.setLayoutY(40);
	mdp.setLayoutX(50);
	
	form.getChildren().addAll(l_id,id,l_mdp,mdp);
	}
	
	/**
	 * @return retourne le formulaire en question
	 */
	public Group getForm(){
		return this.form;
	}
}
